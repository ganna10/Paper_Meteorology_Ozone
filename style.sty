\newlength{\Alen}
\newlength{\minAlen}
\newcommand{\reaction}[1][\mbox{}]{\ensuremath{                                 
    \settowidth{\minAlen}{\ensuremath{\rarrowfill{1.7em}}}
    \settowidth{\Alen}{\ensuremath{\mathrm{^{#1}}}}\addtolength{\Alen}{0.6em}
    \ifthenelse{\lengthtest{\Alen <\minAlen}}{\setlength{\Alen}{\minAlen}}{}
    \stackrel{\mathrm{#1}}{\hbox to\Alen{\rightarrowfill}}
}}

\newcommand{\reactionrev}[1][\mbox{}]{\ensuremath{\rightleftharpoonsfill{1.7em}}}
    
