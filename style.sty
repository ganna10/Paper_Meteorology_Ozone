\newcounter{reaction}
\newcommand{\reactionref}[1]{(R\ref{#1})}
\newcommand{\reactionitem}[5][\mbox{}]
    {#2&\reaction[#1]&#3&
    \ifthenelse{\equal{#4}{old}}
        {\hspace{-.34em}}
        {\refstepcounter{reaction}\label{#5}}
    \reactionref{#5}\\}
                                        
\newcommand{\reactionitemrev}[5][\mbox{}]
    {#2&\reactionrev[#1]&#3&
    \ifthenelse{\equal{#4}{old}}
        {\hspace{-.34em}}
        {\refstepcounter{reaction}\label{#5}}
    \reactionref{#5}\\} 

